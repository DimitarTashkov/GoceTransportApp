@using GoceTransportApp.Services.Data.Users
@using System.Security.Claims
@model IEnumerable<GoceTransportApp.Web.ViewModels.Drivers.DriverDataViewModel>
@inject IUserService userService

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);

}
@{
    ViewData["Title"] = "All Drivers";
}

<h1 class="mb-4">Drivers</h1>

@if (userId != null)
{
    <a asp-action="Create" class="btn btn-primary mb-4">Add New Driver</a>

}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var driver in Model)
        {
            <partial name="_DriverCardPartial" model="driver" />
        }
    }
    else
    {
        <div class="col-12">
            <p class="text-center text-muted">No drivers found.</p>
        </div>
    }
</div>
