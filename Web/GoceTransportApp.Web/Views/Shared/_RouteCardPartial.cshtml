@model GoceTransportApp.Web.ViewModels.Routes.RouteDataViewModel

<div class="col-md-4 mb-3">
    <div class="card shadow-sm h-100">
        <div class="card-body">
            <h5 class="card-title">Route: @Model.DepartingCity → @Model.ArrivingCity</h5>
            <p class="card-text">
                <strong>Departing Street:</strong> @Model.DepartingStreet<br />
                <strong>Arriving Street:</strong> @Model.ArrivingStreet
            </p>
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Delete</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-sm">Details</a>
            </div>
        </div>
    </div>
</div>
