@model GoceTransportApp.Web.ViewModels.Drivers.RemoveDriverViewModel

@{
    ViewData["Title"] = "Remove Driver";

    var returnUrl = Context.Request.Headers["Referer"].ToString();

    if (string.IsNullOrEmpty(returnUrl))
    {
        returnUrl = Url.Action("Index", "Driver");
    }
}

<h1 class="mb-4">Remove Driver</h1>

<div class="card shadow">
    <div class="card-body">
        <h5 class="card-title text-danger">Are you sure you want to remove this driver?</h5>
        <p class="card-text">
            <strong>First Name:</strong> @Model.FirstName<br />
            <strong>Last Name:</strong> @Model.LastName<br />
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input asp-for="OrganizationId" type="hidden" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@returnUrl" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
        </form>
    </div>
</div>
