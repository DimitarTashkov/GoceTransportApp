@using GoceTransportApp.Services.Data.Users
@using GoceTransportApp.Web.ViewModels.Tickets
@using System.Security.Claims
@model AllTicketsSearchFilterViewModel
@inject IUserService userService

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);

}

@{
    ViewData["Title"] = "All Tickets";
}

<div class="container mt-5">
    <h1 class="text-center mb-4"><i class="fas fa-ticket-alt"></i> Tickets</h1>

    @if (userId != null)
    {
        <a asp-action="Create" class="btn btn-success mt-4">
            <i class="fas fa-plus-circle"></i> Add New Ticket
        </a>
    }

    <form asp-action="Index" method="get" class="d-flex mb-4">
        <input type="text" name="SearchQuery" class="form-control me-2" placeholder="Search tickets..." value="@Model.SearchQuery" />
        <input type="number" name="Price" class="form-control me-2" placeholder="Filter by price" />
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Search
        </button>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var ticket in Model.Tickets)
        {
            <partial name="_TicketCardPartial" model="ticket" />
        }
    </div>

    <nav aria-label="Page navigation example" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-CurrentPage="@(Model.CurrentPage - 1)" asp-route-SearchQuery="@Model.SearchQuery">
                    <i class="fas fa-chevron-left"></i> Previous
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-CurrentPage="@i" asp-route-SearchQuery="@Model.SearchQuery">
                        @i
                    </a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-CurrentPage="@(Model.CurrentPage + 1)" asp-route-SearchQuery="@Model.SearchQuery">
                    Next <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>

