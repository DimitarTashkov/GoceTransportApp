@model GoceTransportApp.Web.ViewModels.Streets.EditStreetInputModel

@{
    ViewData["Title"] = "Edit Street";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">
        <i class="fas fa-plus-circle"></i> Edit Street
    </h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Street" class="form-label">
                        <i class="fas fa-road"></i> Street Name
                    </label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
