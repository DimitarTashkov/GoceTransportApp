@model IEnumerable<GoceTransportApp.Web.ViewModels.Streets.StreetDataViewModel>

@{
    ViewData["Title"] = "All Streets";
}

<h1 class="mb-4">Edit Street</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Street</a>

@if (TempData["StreetDeleteFailed"] != null)
{
    <div class="alert alert-danger">
        @TempData["StreetDeleteFailed"]
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var street in Model)
        {
            <partial name="_StreetRowPartial" model="street" />
        }
    </tbody>
</table>
