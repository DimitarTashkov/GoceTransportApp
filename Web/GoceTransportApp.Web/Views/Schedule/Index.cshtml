@using System.Security.Claims
@using GoceTransportApp.Services.Data.Users
@model IEnumerable<GoceTransportApp.Web.ViewModels.Schedules.ScheduleDataViewModel>
@inject IUserService userService

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);

}

@{
    ViewData["Title"] = "Schedules";
}

<h1 class="text-center mt-4">@ViewData["Title"]</h1>

@if (userId != null)
{
    <a asp-action="Create" class="btn btn-primary mb-4">
        <i class="fas fa-plus"></i> Add New Schedule
    </a>
}

<div class="row">
    @foreach (var item in Model)
    {
        <partial name="_ScheduleCard" model="item" />
    }
</div>
