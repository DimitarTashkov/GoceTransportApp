@model GoceTransportApp.Web.ViewModels.Tickets.RemoveTicketViewModel

@{
    ViewData["Title"] = "Remove Ticket";
}

<h1 class="text-center mt-4 text-danger"><i class="fas fa-trash-alt"></i> Remove Ticket</h1>

<div class="card shadow-sm mx-auto" style="max-width: 800px;">
    <div class="card-body">
        <h5 class="card-title text-danger"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
        <p class="card-text">
            Are you sure you want to delete this ticket?.
        </p>

        <div class="mb-3">
            <strong>Issued Date:</strong> @Model.IssuedDate <br />
            <strong>Expiry Date:</strong> @Model.ExpiryDate <br />
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input asp-for="OrganizationId" type="hidden" />

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
