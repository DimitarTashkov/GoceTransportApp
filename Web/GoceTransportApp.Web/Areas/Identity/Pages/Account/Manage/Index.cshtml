@page
@using GoceTransportApp.Web.Areas.Identity.Pages.Account.Manage
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>
    <i class="fas fa-user-circle me-2 text-primary"></i>@ViewData["Title"]
</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row mt-4">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Username (disabled) -->
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label">
                    <i class="fas fa-user me-2"></i>Username
                </label>
            </div>

            <!-- First Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name." />
                <label asp-for="Input.FirstName" class="form-label">
                    <i class="fas fa-id-card me-2"></i>First Name
                </label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name." />
                <label asp-for="Input.LastName" class="form-label">
                    <i class="fas fa-id-card-alt me-2"></i>Last Name
                </label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label">
                    <i class="fas fa-phone me-2"></i>Phone Number
                </label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">
                <i class="fas fa-save me-2"></i>Save
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
