@model GoceTransportApp.Web.ViewModels.Schedules.RemoveScheduleViewModel

@{
    ViewData["Title"] = "Delete Schedule";
}

<h1 class="text-center text-danger mt-4">@ViewData["Title"]</h1>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <p class="text-center">Are you sure you want to delete this schedule?</p>
        <ul class="list-group">
            <li class="list-group-item"><strong>Day:</strong> @Model.Day</li>
            <li class="list-group-item"><strong>Departing:</strong> @Model.Departing</li>
            <li class="list-group-item"><strong>Arriving:</strong> @Model.Arriving</li>
            <li class="list-group-item"><strong>From:</strong> @Model.FromCity</li>
            <li class="list-group-item"><strong>To:</strong> @Model.ToCity</li>
        </ul>
        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <input asp-for="OrganizationId" type="hidden" />

            <button type="submit" class="btn btn-danger w-100">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
        </form>
    </div>
</div>
