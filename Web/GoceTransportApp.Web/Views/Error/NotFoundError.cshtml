@model GoceTransportApp.Web.ViewModels.ErrorViewModel

@{
    ViewData["Title"] = "404 - Page Not Found";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 - Page Not Found</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">
    <div class="text-center w-100">
        <img src="~/images/404error.png" alt="404 Error" class="img-fluid mb-4" style="max-width: 400px;" />
        <h1 class="display-4 text-danger">Oops! Route Not Found</h1>
        <p class="lead">The page you're looking for doesn't exist or has been moved.</p>

        @if (Model.ShowRequestId)
        {
            <p class="h5 text-secondary mt-3">
                <strong>Status Code:</strong> @Model.StatusCode
            </p>
        }

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-4">
            <i class="bi bi-house-door"></i> Back to Home
        </a>

        @if (Model.StatusCode != 0)
        {
            <p class="text-info mt-4">
                <strong>Request ID:</strong> @Model.RequestId
            </p>
        }
    </div>
</body>
</html>
