@model GoceTransportApp.Web.ViewModels.Organizations.OrganizationDetailsViewModel

<div class="card shadow-lg">
    <img src="~/images/no-organization-image.png" class="card-img-top" alt="@Model.Name" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <strong>Address:</strong> @Model.Address<br />
            <strong>Phone:</strong> @Model.Phone<br />
            <strong>Founder:</strong> @Model.FounderId
        </p>
    </div>
    <h3>Related Data</h3>
    <div class="row">
        <div class="col-md-4">
            <a asp-action="Index" asp-controller="Organization" asp-route-id="@Model.Id" class="btn btn-info btn-block">View Routes</a>
        </div>
        <div class="col-md-4">
            <a asp-action="Index" asp-controller="Driver" asp-route-id="@Model.Id" class="btn btn-info btn-block">View Drivers</a>
        </div>
        <div class="col-md-4">
            <a asp-action="Index" asp-controller="Vehicle" asp-route-id="@Model.Id" class="btn btn-info btn-block">View Vehicles</a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <a asp-action="Index" asp-controller="Ticket" asp-route-id="@Model.Id" class="btn btn-info btn-block">View Tickets</a>
        </div>
        <div class="col-md-4">
            <a asp-action="Index" asp-controller="Schedule" asp-route-id="@Model.Id" class="btn btn-info btn-block">View Schedules</a>
        </div>
    </div>
</div>
