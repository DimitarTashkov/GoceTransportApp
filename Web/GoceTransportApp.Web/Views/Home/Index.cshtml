@using GoceTransportApp.Data.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><i class="fas fa-check-circle"></i> Success!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold mb-4 text-primary">
            <i class="fas fa-bus"></i> Welcome to GoceTransportApp
        </h1>
        <p class="h5 text-secondary">
            <i class="fas fa-map-marker-alt"></i> Your one-stop platform for routes, schedules and organizations.
        </p>
    </div>

    <div class="row mt-5 align-items-center">
        <div class="col-md-6">
            <div class="text-center image-frame">
                <img src="~/images/travel_illustration.png" alt="Travel Illustration" class="img-fluid">
            </div>
        </div>

        <div class="col-md-6">
            <div class="row g-4">
                <div class="col-12">
                    <div class="card border-0 shadow-lg p-3" style="background-color: rgba(0, 123, 255, 0.1);">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-route fa-3x text-primary me-4"></i>
                            <div>
                                <h4 class="fw-bold text-primary">
                                    <i class="fas fa-map"></i> Explore Routes
                                </h4>
                                <p class="h6 text-muted">Discover all available travel routes.</p>
                                <a asp-controller="Route" asp-action="Index" class="btn btn-primary btn-lg hover-animated">
                                    <i class="fas fa-location-arrow"></i> View Routes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-lg p-3" style="background-color: rgba(40, 167, 69, 0.1);">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-clock fa-3x text-success me-4"></i>
                            <div>
                                <h4 class="fw-bold text-success">
                                    <i class="fas fa-calendar-alt"></i> Explore Schedules
                                </h4>
                                <p class="h6 text-muted">Stay updated with the latest schedules.</p>
                                <a asp-controller="Schedule" asp-action="Index" class="btn btn-success btn-lg hover-animated">
                                    <i class="fas fa-clock"></i> View Schedules
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-lg p-3" style="background-color: rgba(23, 162, 184, 0.1);">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-building fa-3x text-info me-4"></i>
                            <div>
                                <h4 class="fw-bold text-info">
                                    <i class="fas fa-city"></i> Explore Organizations
                                </h4>
                                <p class="h6 text-muted">Browse the organizations managing these routes.</p>
                                <a asp-controller="Organization" asp-action="Index" class="btn btn-info btn-lg hover-animated">
                                    <i class="fas fa-building"></i> View Organizations
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-lg p-3" style="background-color: rgba(255, 193, 7, 0.1);">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-ticket-alt fa-3x text-warning me-4"></i>
                            <div>
                                <h4 class="fw-bold text-warning">
                                    <i class="fas fa-ticket-alt"></i> View Tickets
                                </h4>
                                <p class="h6 text-muted">Check and book your tickets easily.</p>
                                <a asp-controller="Ticket" asp-action="Index" class="btn btn-warning btn-lg hover-animated">
                                    <i class="fas fa-ticket-alt"></i> View Tickets
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="row mt-5 py-5 bg-light">
        <div class="col-md-6 d-flex flex-column justify-content-center">
            <h2 class="fw-bold text-primary mb-4">
                <i class="fas fa-rocket"></i> Wanna Explore the Full Functionality of Our App?
            </h2>
            <p class="h5 text-muted mb-4">
                <i class="fas fa-user"></i> Create an account today to manage your routes, track your organizations and enjoy the complete experience.
            </p>

            @if (!SignInManager.IsSignedIn(User))
            {
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg hover-animated">
                    <i class="fas fa-user-plus"></i> Get Started Now
                </a>
            }
            else
            {
                <a asp-controller="Organization" asp-action="UserOrganizations" class="btn btn-primary btn-lg hover-animated">
                    <i class="fas fa-user-plus"></i> Get Started Now
                </a>
            }

        </div>

        <div class="col-md-6">
            <div class="image-frame text-center">
                <img src="~/images/sign_up_image.png" alt="Sign Up Illustration" class="img-fluid">
            </div>
        </div>
    </section>

    <div class="row mt-5 g-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg h-100 text-center p-3" style="background-color: rgba(108, 117, 125, 0.1);">
                <div class="card-body">
                    <h4 class="fw-bold text-secondary">
                        <i class="fas fa-info-circle"></i> About Us
                    </h4>
                    <p class="h6 text-muted">Learn more about GoceTransportApp and our mission to make travel easier.</p>
                    <a asp-controller="Home" asp-action="AboutUs" class="btn btn-secondary btn-lg hover-animated">
                        <i class="fas fa-info"></i> Learn More
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-lg h-100 text-center p-3" style="background-color: rgba(52, 58, 64, 0.1);">
                <div class="card-body">
                    <h4 class="fw-bold text-dark">
                        <i class="fas fa-envelope"></i> Contact Us
                    </h4>
                    <p class="h6 text-muted">Have questions? Get in touch with our support team.</p>
                    <a asp-controller="ContactForm" asp-action="Create" class="btn btn-dark btn-lg hover-animated">
                        <i class="fas fa-paper-plane"></i> Contact
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
