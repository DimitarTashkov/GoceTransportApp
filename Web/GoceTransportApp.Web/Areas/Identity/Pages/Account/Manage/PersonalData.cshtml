@page
@using GoceTransportApp.Web.Areas.Identity.Pages.Account.Manage
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>
    <i class="fas fa-user-shield me-2 text-primary"></i>@ViewData["Title"]
</h3>

<div class="row mt-4">
    <div class="col-md-6">
        <p>
            <i class="fas fa-info-circle me-2"></i>Your account contains personal data that you have given us.
            This page allows you to download or delete that data.
        </p>
        <p>
            <i class="fas fa-exclamation-circle me-2 text-danger"></i><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-download me-2"></i>Download
            </button>
        </form>
        <p class="mt-3">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">
                <i class="fas fa-trash-alt me-2"></i>Delete
            </a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
