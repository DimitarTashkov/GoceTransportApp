@model IEnumerable<GoceTransportApp.Web.ViewModels.Organizations.OrganizationDataViewModel>

@{
    ViewData["Title"] = "My Organizations";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><i class="fas fa-ticket-alt me-2"></i> </strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["FailMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><i class="fas fa-times-circle "></i> </strong> @TempData["FailMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h2 class="text-center mb-4">My Organizations</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Add New Organization</a>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var organization in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm">
                    <img src="~/images/no-organization-image.png" class="card-img-top" alt="Organization Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@organization.Name</h5>
                        <p class="card-text">
                            <strong>Address:</strong> @organization.Address<br />
                            <strong>Founder:</strong> @organization.Founder
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@organization.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@organization.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a>
                            <a asp-action="Details" asp-route-id="@organization.Id" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Details</a>

                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <p class="text-muted">You have not created any organizations yet.</p>
        </div>
    }
</div>
