@model GoceTransportApp.Web.ViewModels.Streets.EditStreetInputModel

@{
    ViewData["Title"] = "Edit Street";
}
 <h1 class="mb-4">Edit Street</h1>

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Street</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FromStreetRoutes" />
                <input type="hidden" asp-for="ToStreetRoutes" />
                <input type="hidden" asp-for="StreetsCities" />

                <div class="mb-3">
                    <label asp-for="Street" class="form-label">Street Name</label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
