@model GoceTransportApp.Web.ViewModels.Organizations.OrganizationInputModel

@{
    ViewData["Title"] = "Create Organization";
}
<h2 class="text-center">Create Organization</h2>

<div class="card shadow-sm p-4" style="max-width: 600px; margin: auto;">
    <form asp-action="Create" method="post">
    <input asp-for="FounderId" type="hidden" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/showDateTimePicker.js"></script>
}
